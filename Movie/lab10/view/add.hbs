<body>
    <div class="container">
       <form action="/addstudent"  >
   <h3>ADD A NEW BOOK</h3>
   
    <hr>

    <label for="name"><b>Title:</b></label>
    <input type="text" placeholder="Enter Name" name="name" id="name" required>

    <label for="phn"><b>Mobile:</b></label>
    <input type="phone" placeholder="Enter Phone Number" name="phone" id="phone" required>

    <label for="eml-id"><b>Email Id:</b></label>
    <input type="email" placeholder="Enter Email Id" name="email" id="email" required>
   
  <div class="gender_g">
     <strong>Type</strong>
     <input type="radio" name="gender" id="" value="Paperback"> Paperback
     <input type="radio" name="gender" id=""  value="Hardcover">  Hardcover
  </div>
    <button type="submit" class="registerbtn">Add a book</button>

  
    <a href="./" style="color:black">BACK TO HOME PAGE</a> <br>
     
     {{#if mesg}}
     <h3>Data Inserted</h3>
     {{/if}}

      {{#if checkmesg}}
